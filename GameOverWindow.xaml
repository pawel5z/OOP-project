<Window x:Class="Simple_games.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_games"
        mc:Ignorable="d"
        Title="Game Over" Background="#FFE4E404" Height="336" Width="475" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Viewbox Stretch="Uniform">
        <StackPanel Margin="10">
            <TextBlock x:Name="EndTextBlock" HorizontalAlignment="Center" Height="100" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="72" TextAlignment="Center" Margin="0,5,0,5"/>
            <Button IsDefault="True" Click="RestartButton_Click" FontSize="36" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Restart" Margin="0,5,0,5"/>
            <Button IsCancel="True" x:Name="MainMenuButton" Content="Main menu" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="MainMenuButton_Click" FontSize="36" Margin="0,5,0,5"/>
        </StackPanel>
    </Viewbox>
</Window>
